{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rzeczy Znalezione - Wzorcowy Schemat Danych",
  "description": "Ujednolicony format danych o rzeczach znalezionych dla portalu dane.gov.pl",
  "version": "1.0.0",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id_zgloszenia",
      "kategoria",
      "nazwa_przedmiotu",
      "data_znalezienia",
      "miejsce_znalezienia",
      "jednostka_samorzadowa",
      "kod_teryt",
      "status",
      "kontakt_telefon",
      "kontakt_email"
    ],
    "properties": {
      "id_zgloszenia": {
        "type": "string",
        "description": "Unikalny identyfikator zgłoszenia w formacie: TERYT-ROK-NUMER",
        "pattern": "^[0-9]{7}-[0-9]{4}-[0-9]{1,6}$",
        "examples": ["1465011-2024-000142"]
      },
      "kategoria": {
        "type": "string",
        "description": "Kategoria znalezionego przedmiotu",
        "enum": [
          "dokumenty",
          "elektronika",
          "odziez",
          "bizuteria",
          "klucze",
          "portfele",
          "telefony",
          "rowery",
          "torby_plecaki",
          "okulary",
          "zegarki",
          "zabawki",
          "sprzet_sportowy",
          "instrumenty_muzyczne",
          "inne"
        ]
      },
      "nazwa_przedmiotu": {
        "type": "string",
        "description": "Krótka nazwa przedmiotu",
        "minLength": 3,
        "maxLength": 100,
        "examples": ["Portfel skórzany brązowy", "iPhone 14 Pro"]
      },
      "opis": {
        "type": "string",
        "description": "Szczegółowy opis przedmiotu (bez danych osobowych)",
        "maxLength": 1000,
        "examples": ["Portfel męski, skórzany, brązowy, z logo producenta XYZ"]
      },
      "data_znalezienia": {
        "type": "string",
        "format": "date",
        "description": "Data znalezienia przedmiotu w formacie YYYY-MM-DD",
        "examples": ["2024-03-15"]
      },
      "miejsce_znalezienia": {
        "type": "string",
        "description": "Opis miejsca znalezienia (adres lub lokalizacja)",
        "examples": ["Autobus linii 125, przystanek Centrum"]
      },
      "wspolrzedne_lat": {
        "type": "number",
        "description": "Szerokość geograficzna (opcjonalne)",
        "minimum": 49.0,
        "maximum": 54.9,
        "examples": [52.2297]
      },
      "wspolrzedne_lon": {
        "type": "number",
        "description": "Długość geograficzna (opcjonalne)",
        "minimum": 14.1,
        "maximum": 24.2,
        "examples": [21.0122]
      },
      "jednostka_samorzadowa": {
        "type": "string",
        "description": "Nazwa jednostki samorządowej (powiat/miasto)",
        "examples": ["Powiat Warszawski Zachodni", "Miasto Stołeczne Warszawa"]
      },
      "kod_teryt": {
        "type": "string",
        "description": "7-cyfrowy kod TERYT jednostki samorządowej",
        "pattern": "^[0-9]{7}$",
        "examples": ["1465011"]
      },
      "wojewodztwo": {
        "type": "string",
        "description": "Nazwa województwa",
        "examples": ["mazowieckie", "małopolskie"]
      },
      "status": {
        "type": "string",
        "description": "Aktualny status przedmiotu",
        "enum": [
          "oczekuje_na_odbior",
          "odebrane",
          "przekazane_skarbowi_panstwa",
          "zlikwidowane"
        ],
        "default": "oczekuje_na_odbior"
      },
      "data_przyjecia": {
        "type": "string",
        "format": "date",
        "description": "Data przyjęcia do biura rzeczy znalezionych"
      },
      "data_waznosci": {
        "type": "string",
        "format": "date",
        "description": "Data do kiedy przedmiot będzie przechowywany (zazwyczaj 2 lata od znalezienia)"
      },
      "kontakt_telefon": {
        "type": "string",
        "description": "Numer telefonu biura rzeczy znalezionych",
        "pattern": "^[+]?[0-9\\s-]{9,15}$",
        "examples": ["+48 22 123 45 67"]
      },
      "kontakt_email": {
        "type": "string",
        "format": "email",
        "description": "Adres email biura rzeczy znalezionych",
        "examples": ["rzeczy.znalezione@powiat.pl"]
      },
      "kontakt_adres": {
        "type": "string",
        "description": "Adres biura rzeczy znalezionych",
        "examples": ["ul. Przykładowa 10, 00-001 Warszawa"]
      },
      "godziny_otwarcia": {
        "type": "string",
        "description": "Godziny pracy biura",
        "examples": ["pn-pt 8:00-16:00"]
      },
      "zdjecie_url": {
        "type": "string",
        "format": "uri",
        "description": "Link do zdjęcia przedmiotu (opcjonalne)"
      },
      "uwagi": {
        "type": "string",
        "description": "Dodatkowe uwagi",
        "maxLength": 500
      },
      "data_aktualizacji": {
        "type": "string",
        "format": "date-time",
        "description": "Data ostatniej aktualizacji rekordu"
      }
    }
  }
}

